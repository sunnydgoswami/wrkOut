<%= simple_form_for(@food) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :calories %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to 'Back', foods_path, { class: 'btn btn-danger pull-right' } %>
  </div>
<% end %>
